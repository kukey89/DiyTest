<resources>

    <!-- BaseActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutStyle_Match">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
    </style>

    <style name="LayoutStyle_WidthMatch" parent="LayoutStyle">
        <item name = "android:layout_width">match_parent</item>
    </style>

    <style name="LayoutStyle_HeightMatch" parent="LayoutStyle">
        <item name = "android:layout_height">match_parent</item>
    </style>

    <style name="TextViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle_Match">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
    </style>

    <style name="TextViewStyle_WidthMatch" parent="TextViewStyle">
        <item name = "android:layout_width">match_parent</item>
    </style>

    <style name="TextViewStyle_HeightMatch" parent="TextViewStyle">
        <item name = "android:layout_height">match_parent</item>
    </style>

</resources>
